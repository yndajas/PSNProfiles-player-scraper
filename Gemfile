source "https://rubygems.org"

gem 'pry' # for testing
gem 'require_all' # for requiring all lib files in one command
gem 'open-uri' # for opening webpages (feeds into Nokogiri)
gem 'nokogiri' # for scraping webpages
gem 'time_difference' # for getting nicely formatted multi-unit time differences (for "length of service")
gem 'activesupport', require: 'active_support/core_ext' # for exporting to XML
gem 'builder' # for exporting to XML
gem 'json' # for exporting to JSON
